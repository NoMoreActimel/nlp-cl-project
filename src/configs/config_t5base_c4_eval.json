{
  "name": "T5_CL_summarization",
  "n_gpu": 1,
  "preprocessing": {},
  "model": {
      "type": "T5forSummarization",
      "args": {
        "model_name": "t5-base",
        "cache_dir": "cache/",
        "max_length": 256
      }
  },
  "data": {
    "train": {
      "batch_size": 8,
      "num_workers": 5,
      "max_length": 256,
      "tokenizer_name": ["T5Tokenizer", "t5-base"],
      "use_mixed_dataset": true,
      "mixed_dataset": {
        "type": "MixedSequentialDataset",
        "args": {
          "sequential_mixing_rate": 0.1,
          "base_mixing_rate": 0.1
        }
      },
      "datasets": [
        {
          "type": "OriginalDataset",
          "args": {
            "dataset_dir": "summarization-data/cnndm",
            "split": "train"
          }
        },
        {
          "type": "OriginalDataset",
          "args": {
            "dataset_dir": "summarization-data/wikihow",
            "split": "train"
          }
        },
        {
          "type": "OriginalDataset",
          "args": {
            "dataset_dir": "summarization-data/xsum",
            "split": "train"
          }
        }
      ]
    },
    "val_cnndm": {
      "batch_size": 16,
      "num_workers": 5,
      "max_length": 256,
      "tokenizer_name": ["T5Tokenizer", "t5-base"],
      "use_mixed_dataset": false,
      "datasets": [
        {
          "type": "OriginalDataset",
          "args": {
            "dataset_dir": "summarization-data/cnndm",
            "split": "valid"
          }
        }
      ]
    },
    "val_wikihow": {
      "batch_size": 16,
      "num_workers": 5,
      "max_length": 256,
      "tokenizer_name": ["T5Tokenizer", "t5-base"],
      "use_mixed_dataset": false,
      "datasets": [
        {
          "type": "OriginalDataset",
          "args": {
            "dataset_dir": "summarization-data/wikihow",
            "split": "valid"
          }
        }
      ]
    },
    "val_xsum": {
      "batch_size": 16,
      "num_workers": 5,
      "max_length": 256,
      "tokenizer_name": ["T5Tokenizer", "t5-base"],
      "use_mixed_dataset": false,
      "datasets": [
        {
          "type": "OriginalDataset",
          "args": {
            "dataset_dir": "summarization-data/xsum",
            "split": "valid"
          }
        }
      ]
    },
    "val_C4": {
      "batch_size": 16,
      "num_workers": 5,
      "max_length": 256,
      "tokenizer_name": ["T5Tokenizer", "t5-base"],
      "use_mixed_dataset": false,
      "t5_mlm_masking": true,
      "datasets": [
        {
          "type": "HuggingFaceDataset",
          "args": {
            "path": "allenai/c4",
            "streaming": false,
            "split": "validation",
            "data_files": {"validation": "en/c4-validation.00000-of-00008.json.gz"},
            "max_samples": 1000
          }
        }
      ]
    }
  },
  "optimizer": {
    "type": "AdamW",
    "args": {
      "lr": 5e-4,
      "betas": [0.9, 0.95],
      "weight_decay": 1e-5
    }
  },
  "metrics": [
  ],
  "lr_scheduler": {
    "type": "ExponentialLR",
    "args": {
      "gamma": 1.0
    }
  },
  "loss": {
    "type": "CrossEntropyLoss",
    "args": {}
  },
  "trainer": {
    "epochs": 60,
    "eval_frequency": 10,
    "save_dir": "saved/",
    "save_period": 60,
    "verbosity": 2,
    "monitor": "min loss",
    "visualize": "wandb",
    "wandb_project": "nlp-cl-project",
    "wandb_run_name": "T5b Mix=0.1 w/o grad clip",
    "grad_norm_clip": 100.0
  }
}