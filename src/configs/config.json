{
  "name": "T5_CL_summarization",
  "n_gpu": 1,
  "preprocessing": {},
  "model": {
      "type": "T5forSummarization",
      "args": {
        "model_name": "t5-small",
        "cache_dir": "/content/nlp-cl-project/cache/",
        "max_length": 256
      }
  },
  "data": {
    "train": {
      "batch_size": 32,
      "num_workers": 5,
      "max_length": 256,
      "tokenizer_name": ["T5Tokenizer", "t5-small"],
      "use_mixed_dataset": true,
      "mixed_dataset": {
        "type": "MixedSequentialDataset",
        "args": {
          "sequential_mixing_rate": 0.1
        }
      },
      "datasets": [
        {
          "type": "OriginalDataset",
          "args": {
            "dataset_dir": "/content/nlp-cl-project/summarization-data/cnndm",
            "tokenizer_name": ["T5Tokenizer", "google-t5/t5-small"],
            "split": "train"
          }
        },
        {
          "type": "OriginalDataset",
          "args": {
            "dataset_dir": "/content/nlp-cl-project/summarization-data/wikihow",
            "tokenizer_name": ["T5Tokenizer", "google-t5/t5-small"],
            "split": "train"
          }
        },
        {
          "type": "OriginalDataset",
          "args": {
            "dataset_dir": "/content/nlp-cl-project/summarization-data/xsum",
            "tokenizer_name": ["T5Tokenizer", "google-t5/t5-small"],
            "split": "train"
          }
        }
      ]
    },
    "val": {
      "batch_size": 32,
      "num_workers": 5,
      "max_length": 256,
      "tokenizer_name": ["T5Tokenizer", "google-t5/t5-small"],
      "use_mixed_dataset": true,
      "mixed_dataset": {
        "type": "MixedSequentialDataset",
        "args": {
          "sequential_mixing_rate": 0.0
        }
      },
      "datasets": [
        {
          "type": "OriginalDataset",
          "args": {
            "dataset_dir": "/content/nlp-cl-project/summarization-data/cnndm",
            "tokenizer_name": ["T5Tokenizer", "google-t5/t5-small"],
            "split": "valid"
          }
        },
        {
          "type": "OriginalDataset",
          "args": {
            "dataset_dir": "/content/nlp-cl-project/summarization-data/wikihow",
            "tokenizer_name": ["T5Tokenizer", "google-t5/t5-small"],
            "split": "valid"
          }
        },
        {
          "type": "OriginalDataset",
          "args": {
            "dataset_dir": "/content/nlp-cl-project/summarization-data/xsum",
            "tokenizer_name": ["T5Tokenizer", "google-t5/t5-small"],
            "split": "valid"
          }
        }
      ]
    }
  },
  "optimizer": {
    "type": "AdamW",
    "args": {
      "lr": 5e-1,
      "betas": [0.9, 0.95],
      "weight_decay": 1e-5
    }
  },
  "metrics": [
    {
      "type": "AverageRougeMetric",
      "args": {
        "name": "AverageRouge"
      }
    }
  ],
  "lr_scheduler": {
    "type": "ExponentialLR",
    "args": {
      "gamma": 1.0
    }
  },
  "loss": {
    "type": "CrossEntropyLoss",
    "args": {}
  },
  "trainer": {
    "epochs": 10,
    "save_dir": "saved/",
    "save_period": 5,
    "verbosity": 2,
    "monitor": "min loss",
    "early_stop": 100,
    "visualize": "wandb",
    "wandb_project": "nlp-cl-project",
    "wandb_run_name": "T5s Mix=0.1 w/o grad clip",
    "grad_norm_clip": 100.0
  }
}