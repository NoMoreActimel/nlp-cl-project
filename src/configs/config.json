{
  "name": "decoder_on_tinystories",
  "n_gpu": 1,
  "preprocessing": {},
  "model": {
      "type": "DecoderModel",
      "args": {
          "num_layers": 8,
          "num_heads": 8,
          "embed_dim": 512,
          "feedforward_dim": 2048,
          "attn_dropout": 0.1,
          "ff_dropout": 0.1,
          "use_flash_attention": true,
          "use_rms_norm": false,
          "dtype": "bfloat16"
      }
  },
  "data": {
    "train": {
      "batch_size": 256,
      "num_workers": 5,
      "datasets": [
        {
          "type": "MixedSequentialDataset",
          "args": {
            "base_mixing_rate": 0.1,
            "sequential_mixing_rate": 0.1,
            "base_dataset_name": "restaurant_unsup",
            "datasets_names": ["ai_unsup", "acl_unsup", "agnews_unsup"],
            "tokenizer_name": ["T5Tokenizer", "google-t5/t5-small"],
            "max_length": 256
          }
        }
      ]
    },
    "val": {
      "batch_size": 256,
      "num_workers": 5,
      "inference_on_evaluation": true,
      "inference_indices": [24, 2, 22],
      "inference_temperatures": [0.5, 1.0, 2.0],
      "datasets": [
        {
          "type": "SequentialDataset",
          "args": {
            "datasets_names": ["ai_unsup"],
            "tokenizer_name": ["T5Tokenizer", "google-t5/t5-small"],
            "max_length": 256
          }
        }
      ]
    }
  },
  "optimizer": {
    "type": "AdamW",
    "args": {
      "lr": 5e-4,
      "betas": [0.9, 0.95],
      "weight_decay": 0.1
    }
  },
  "metrics": [],
  "lr_scheduler": {
    "type": "ExponentialLR",
    "args": {
      "gamma": 1.0
    }
  },
  "loss": {
    "type": "CrossEntropyLoss",
    "args": {}
  },
  "trainer": {
    "epochs": 1000,
    "save_dir": "saved/",
    "save_period": 5,
    "verbosity": 2,
    "monitor": "min loss",
    "early_stop": 100,
    "visualize": "wandb",
    "wandb_project": "dl-hse-bhw-Tiny-Stories",
    "wandb_run_name": "12L-8h-512-Decoder, sp-word",
    "len_epoch": 1000,
    "grad_norm_clip": 1.0
  }
}